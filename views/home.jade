extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Selam #{user.firstName}. Bilgilerin:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li Email    ---> #{user.email}
								li First Name ---> #{user.firstName} 
								li Last Name ---> #{user.lastName}
								li Files: --->
								each file in user.files
									li id :#{file.id}
						a(href='/signout', class='text-center new-account') Sign Out
				#message
					if message
						h1.text-center.error-message #{message}