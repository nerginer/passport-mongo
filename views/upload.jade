extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Upload New File
					div.signup-wall
						form(class='form-upload', action='/upload', method='POST', enctype="multipart/form-data")
							input(type='file', name='userfile')
							button(class='btn btn-lg btn-primary btn-block', type='submit') Upload
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}
							
							

